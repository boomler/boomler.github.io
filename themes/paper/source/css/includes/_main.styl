.main, .page
  .main__2-col
    display: grid
    grid-template-columns: auto 30rem

.paper-container
  margin: 0 auto
  width: 80%
  min-height: 100vh
  padding: 0 2rem
  min-width: 640px
  max-width: 98vw

@media screen and (max-width: $S)
  .main, .page
    .main__2-col
      grid-template-columns: 1fr
